---
import Servers from "../components/Servers.astro"
import Users from "../components/Users.astro"
import Apps from "../components/Apps.astro"
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<title>Conkort</title>
	</head>
	<body>
		<div class="hero">
			<section class="servers">
				<Servers />
			</section>
			<section class="main">
				<slot />
			</section>
			<section class="users">
				<Users />
			</section>
		</div>
		<div class="botom-bar">
			<Apps />
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: #333;
		display: flex;
		flex-direction: column;
	}
	.hero {
		display: flex;
		width: 100%;
		flex: 1;
	}
	.servers {
		height: 100%;
		width: 15vw;
		background-color: #272727;
		position: sticky;
	}
	.main {
		height: 100%;
		width: 20vw;
		display: flex;
		flex: 1;
		background-color: rgb(83, 83, 83);
	}
	.users {
		height: 100%;
		width: 15vw;
		background-color: #272727;
		position: sticky;
	}
	.botom-bar {
		background-color: rgb(70, 70, 70);
		width: 100%;
		height: 5vh;
		transition: all 0.3s ease;
	}
	.botom-bar:hover{
		background-color: rgb(70, 70, 70);
		width: 100%;
		height: 15vh;
		transition: all 0.3s ease;
	}
</style>
